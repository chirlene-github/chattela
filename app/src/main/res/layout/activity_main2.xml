<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity2">
<TextView
    android:id="@+id/tv_mensagemfixa2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tela 2"
    android:textSize="20dp"
    android:textColor="#9C27B0"
    android:gravity="center"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/tv_recebida2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:textColor="#9C27B0"
    android:gravity="center"
    android:text="Mensagem recebida"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_mensagemfixa2"/>


<EditText
    android:id="@+id/ed_mensagem2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="76dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/bt_enviar2"
    app:layout_constraintStart_toStartOf="parent" />

<Button
    android:id="@+id/bt_enviar2"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:text="ENVIAR"
    app:layout_constraintStart_toEndOf="@id/ed_mensagem2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
